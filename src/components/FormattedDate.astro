---
interface Props {
	date: Date;
}

const { date } = Astro.props;
let formattedDate = date.toLocaleDateString('en-us', {
	year: 'numeric',
	month: 'short',
	day: 'numeric',
})
if (formattedDate == "Jan 1, 1864")
	formattedDate = "Date to be determined";
else if (formattedDate == "Jan 2, 1864")
	formattedDate = "";
else
	formattedDate = "Planned for " + formattedDate;

---

<time datetime={date.toISOString()}>
	{ formattedDate }
</time>
